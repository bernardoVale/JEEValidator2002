<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
    <application>
        <resource-bundle>
            <base-name>br.edu.utfpr.i18n.disciplinas</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <managed-bean>
        <managed-bean-name>professorBean</managed-bean-name>
        <managed-bean-class>br.edu.utfpr.model.managedBeans.ProfessorBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>disciplinaBean</managed-bean-name>
        <managed-bean-class>br.edu.utfpr.model.managedBeans.DisciplinaBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>visualizarProfessorBean</managed-bean-name>
        <managed-bean-class>br.edu.utfpr.model.managedBeans.VisualizarProfessoresBean</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
</faces-config>